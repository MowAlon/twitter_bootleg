<div class="container col-md-12">

  <div class="row center">
    <h1><%= current_user.name %></h1>
    <%= image_tag @user.profile_image_url.to_s.sub("_normal.","."), size: "300x300" %>

    <table class="center twitter-counts">
      <tr>
        <td>
          <div><strong>Tweets</strong></div>
          <div><%= @user.tweets_count %></div>
        </td>
        <td>
          <div><strong>Following</strong></div>
          <div><%= @user.friends_count %></div>
        </td>
        <td>
          <div><strong>Followers</strong></div>
          <div><%= @user.followers_count %></div>
        </td>
      </tr>
    </table>

    <h3><%= link_to "@#{current_user.screen_name}", @user.url.to_s %> said...</h3>
  </div>

  <div class="row well profile-status">
    <div class="col-md-10">
        <h2 class="center">"<%= sanitize(auto_link(@user.status.text)) %>"</h2>
    </div>
    <div class="col-md-2">
      <div class="trash">
        <%= link_to status_path(@user.status.id), method: :delete do %>
          <i class="glyphicon glyphicon-trash big-glyph trash"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
      <table>
        <tbody class="profile-extras">
          <tr>
            <td class="label">Description:</td><td><%= @user.description %></td>
          </tr>
          <tr>
            <td class="label">Location:</td><td><%= @user.location %></td>
          </tr>
          <tr>
            <td class="label">Website:</td><td><%= link_to @user.website %></td>
          </tr>
          <tr>
            <td class="label">Since:</td><td><%= @user.created_at.strftime("%B %d, %Y") %></td>
          </tr>
        </tbody>
      </table>
  </div>

</div>
